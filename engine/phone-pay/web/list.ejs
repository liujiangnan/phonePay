<!-- 新 Bootstrap 核心 CSS 文件 -->
<link rel="stylesheet" href="/phone-pay/web/lib/bootstrap3.3/css/bootstrap.min.css">

<link rel="stylesheet" href="/phone-pay/web/lib/bootstrapValidator/css/bootstrapValidator.min.css">

<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
<script src="/phone-pay/web/lib/bootstrap3.3/js/bootstrap.min.js"></script>

<script type="text/javascript" src="/phone-pay/web/lib/bootstrapValidator/js/bootstrapValidator.min.js"></script>
<script type="text/javascript" src="/phone-pay/web/lib/bootstrapValidator/js/language/zh_CN.js"></script>

<!-- ejs模板,模块展现层,负责展现UI -->
<nav class="navbar navbar-default">
  <div id="realData" class="container-fluid" > 
    <div class="row">
      <div class="col-md-12" >
        <form class="form-inline" style="margin-top: 20px;margin-bottom: 20px;">
          <div class="form-group">
            <label for="username">用户名：</label>
            <input type="text" class="form-control" id="username">
          </div>
          <div class="form-group">
            <label for="searchdate">日期：</label>
            <input type="date" class="form-control" id="searchdate">
          </div>
          <button type="button" class="btn btn-default" onclick="search()">查询</button>
        </form>
      </div>
    </div>
  </div>
</nav>
<table id="datalist" class="table table-striped table-hover">
  <tr><th>序号</th><th>日期</th><th>用户</th><th>充值类型</th><th>充值金额</th><th>支付方式</th></tr>
  <tr v-for="(item, index) in items">
    <td>{{index}}</td>
    <td>{{item.date}}</td>
    <td>{{item.username}}</td>
    <td>{{item.chargeType}}</td>
    <td>{{item.money}}</td>
    <td>{{item.payType}}</td>
  </tr>
</table> 
<script> 
  net.data.items = [];  
  var vue = net.datachange('datalist');

  function search(){
    net.call('search','');
  }
  
</script>